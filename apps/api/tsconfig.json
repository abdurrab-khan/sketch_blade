{
   "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "types": ["./src/types/req-type.d.ts"],
      "paths": {
         "@/*": ["./src/*"]
      }
   },
   "exclude": ["node_modules", "dist", "client"],
   "include": ["src/**/*"]
}
